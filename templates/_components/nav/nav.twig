{# templates/_components/nav/nav.twig #}

{# --- 1. Theme Logic --- #}
{% set defaultTheme = {
    backgroundColor: 'bg-[#F9C33D]',
    textColor: 'text-foxplan-charcoal-brown',
    searchBgColor: 'bg-foxplan-charcoal-brown',
    ctaBgColor: 'bg-foxplan-charcoal-brown',
    iconColor: 'text-white',
    logoFilter: ''
} %}

{% set theme = (navigationTheme is defined and navigationTheme is iterable) ? defaultTheme|merge(navigationTheme) : defaultTheme %}

{# --- 2. Mega Menu Content --- #}
{% set megaMenuData = {
    'accounting': [
        { title: 'Tax Returns', url: '/tax', desc: 'Expert preparation for your annual obligations.' },
        { title: 'Business Advisory', url: '/advisory', desc: 'Strategic planning for business growth.' },
        { title: 'Payroll', url: '/payroll', desc: 'Complete management of your staff payments.' },
        { title: 'Auditing', url: '/audit', desc: 'Thorough examination of financial records.' },
        { title: 'Auditing', url: '/audit', desc: 'Thorough examination of financial records.' }
    ],
    'insurance': [
        { title: 'Life Insurance', url: '/life', desc: 'Protection for your familyâ€™s future.' },
        { title: 'Health Insurance', url: '/health', desc: 'Access to the best medical care.' },
        { title: 'Home & Contents', url: '/home', desc: 'Securing your most valuable assets.' },
        { title: 'Car Insurance', url: '/car', desc: 'Coverage for all your travels.' },
        { title: 'Car Insurance', url: '/car', desc: 'Coverage for all your travels.' }
    ],
    'savings': [
        { title: 'Savings & Investments', url: '/invest', desc: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.' },
        { title: 'Financial Planning', url: '/planning', desc: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.' },
        { title: 'Kiwisaver', url: '/kiwisaver', desc: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.' },
        { title: 'Retirement Planning', url: '/retirement', desc: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.' },
        { title: 'Savings', url: '/savings-page', desc: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.' },
        { title: 'Investment Management', url: '/mgmt', desc: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.' }
    ]
} %}

<nav class="w-full relative z-50" x-data="{ openTab: null }" @mouseleave="openTab = null">
    {# --- TOP NAV BAR --- #}
    <div class="w-full {{ theme.backgroundColor }} relative z-50">
        <div class="flex items-center h-16">
            <a href="/" class="flex items-center h-full pl-8 pr-[100px] flex-none">
                <img src="{{ craft.vite.asset('images/FoxPlan_Logo.svg') }}" alt="Logo" class="h-11 w-auto {{ theme.logoFilter }}">
            </a>

            <div class="flex-grow flex items-center pl-[50px] h-full">
                <div class="hidden lg:flex items-center gap-[150px] text-[15px] font-medium {{ theme.textColor }} h-full">
                    {% for handle in ['accounting', 'insurance', 'savings', 'mortgages', 'news', 'about'] %}
                        <div class="h-full flex items-center cursor-pointer" @mouseenter="openTab = '{{ handle }}'">
                            <span class="hover:opacity-60 transition flex items-center gap-1">
                                {{ handle|capitalize }}
                                <svg class="w-3 h-3" :class="openTab === '{{ handle }}' ? 'rotate-180' : ''" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                            </span>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="flex flex-none items-center h-full">
                <button class="w-16 h-16 {{ theme.searchBgColor }} flex items-center justify-center">
                    <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" class="{{ theme.iconColor }}"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
                </button>
                {% include '_components/ui/button/button.twig' with { props: { text: 'Get in touch', url: '/contact', classes: 'h-16 px-10 ' ~ theme.ctaBgColor ~ ' text-white rounded-none' } } only %}
            </div>
        </div>
    </div>

    {# --- GRID DROPDOWN PANEL --- #}
    {% for handle, items in megaMenuData %}
        <div x-show="openTab === '{{ handle }}'"
             class="absolute top-12 left-5 right-5 z-40 pt-8"
             style="display: none;"
             @mouseenter="openTab = '{{ handle }}'"
             @mouseleave="openTab = null">

            <div class="bg-white shadow-2xl flex w-full min-h-[450px] border border-foxplan-yellow/5">
                {# THE GRID SECTION #}
                <div class="w-2/3 grid grid-cols-3">
                    {% for subItem in items %}
                        <div class="p-10 border-r border-b border-foxplan-yellow/20 last:border-r-0">
                            <a href="{{ subItem.url }}" class="block group/link mb-4 border-l-2 border-foxplan-yellow pl-3">
                                <p class="text-[11px] font-bold tracking-[0.2em] text-foxplan-charcoal-brown uppercase group-hover/link:text-black transition-colors">
                                    {{ subItem.title }}
                                </p>
                            </a>
                            <p class="text-sm text-black/60 leading-relaxed">{{ subItem.desc }}</p>
                        </div>
                    {% endfor %}

                    {# Fill empty grid cells to maintain border structure if items < 6 #}
                    {% if items|length < 6 %}
                        {% for i in 1..(6 - items|length) %}
                            <div class="p-10 border-r border-b border-foxplan-yellow/5"></div>
                        {% endfor %}
                    {% endif %}
                </div>

                {# BLOG SECTION #}
                <div class="w-1/3 relative group overflow-hidden bg-[#FAF7F2]">
                    <img src="{{ craft.vite.asset('images/About_1.jpg') }}" class="absolute inset-0 w-full h-full object-cover transition duration-700 group-hover:scale-105">
                    <div class="absolute inset-0 bg-black/20"></div>
                    <div class="absolute bottom-12 left-12 right-12 text-white">
                        <span class="bg-[#007AFF] text-[10px] font-bold px-3 py-1 rounded-full mb-4 inline-block">ARTICLE</span>
                        <h3 class="text-3xl font-medium mb-4">Why choose private health insurance?</h3>
                        <a href="/blog" class="text-[11px] font-bold border-b border-white pb-1">READ MORE</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</nav>