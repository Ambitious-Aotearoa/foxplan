{# _sections/get-in-touch.twig #}

{% set defaults = {
    heading: 'Interested? Get in touch',
    backgroundColor: 'bg-foxplan-yellow',
    textColor: 'text-foxplan-charcoal-brown',
    borderColor: 'border-foxplan-charcoal-brown'
} %}

{% set data = defaults | merge(props | default({})) %}

{# Shared UI Classes #}
{% set inputLabelClasses = 'text-sm font-semibold text-foxplan-charcoal-brown block mb-1 uppercase tracking-widest' %}
{% set inputFieldClasses = 'w-full pb-3 pt-2 bg-transparent border-0 border-b border-foxplan-charcoal-brown focus:ring-0 focus:border-black transition-colors duration-200 placeholder-gray-400' %}

<section class="w-full {{ data.backgroundColor }} pt-16 pb-24 md:pt-24 md:pb-32">
    {#
    The Grid:
    - md:grid-cols-10 creates a 10-unit system.
    - The first 3 units (col-span-3) act as the empty left spacer.
    - The remaining 7 units (col-span-7) hold the content.
    #}
    <div class="grid grid-cols-1 md:grid-cols-10 w-full">

        {# Left Spacer (30%) #}
        <div class="hidden md:block md:col-span-3"></div>

        {# Content Area (70%) #}
        <div class="col-span-1 md:col-span-7 px-8 lg:pr-12">

            {# Heading with Top Border #}
            <div class="pt-12 border-t {{ data.borderColor }} mb-16">
                <h2 class="font-serif text-5xl md:text-7xl font-normal {{ data.textColor }} leading-none tracking-tight">
                    {{ data.heading }}
                </h2>
            </div>

            {# Contact Form #}
            <form action="#" method="POST" class="space-y-12">

                {# Row 1: Name #}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-12">
                    <div>
                        <label for="first-name" class="{{ inputLabelClasses }}">First Name</label>
                        <input type="text" name="first-name" id="first-name" placeholder="John" class="{{ inputFieldClasses }}" required>
                    </div>
                    <div>
                        <label for="last-name" class="{{ inputLabelClasses }}">Last Name</label>
                        <input type="text" name="last-name" id="last-name" placeholder="Doe" class="{{ inputFieldClasses }}" required>
                    </div>
                </div>

                {# Row 2: Contact Info #}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-12">
                    <div>
                        <label for="phone" class="{{ inputLabelClasses }}">Phone</label>
                        <input type="tel" name="phone" id="phone" placeholder="1234 567 890" class="{{ inputFieldClasses }}">
                    </div>
                    <div>
                        <label for="email" class="{{ inputLabelClasses }}">Email</label>
                        <input type="email" name="email" id="email" placeholder="johndoe@email.com" class="{{ inputFieldClasses }}" required>
                    </div>
                </div>

                {# Row 3: Message #}
                <div class="w-full">
                    <label for="message" class="{{ inputLabelClasses }}">Message</label>
                    <input type="text" name="message" id="message" placeholder="Enter your message" class="{{ inputFieldClasses }}">
                </div>

                {# Submit Button #}
                <div class="pt-6">
                    {% include '_components/ui/button/button.twig' with {
                        props: {
                            text: 'Submit',
                            style: 'secondary',
                            url: '#',
                            backgroundColor: 'bg-foxplan-charcoal-brown',
                            textColor: 'text-white',
                            attributes: { type: 'submit' }
                        }
                    } only %}
                </div>
            </form>

        </div>
    </div>
</section>