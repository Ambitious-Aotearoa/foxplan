{# templates/_components/ui/accordion/accordion-2.twig #}

{% set accordionItems = entry.accordion.all() %}

<div class="w-full select-none" x-data="{ openItem: -1 }">

    {# Accordion List - Clean version without dotted line or toggle icon #}
    <div class="w-full">
        {% for item in accordionItems %}
            <div class="border-b border-gray-300">
                <button
                        @click="openItem = openItem === {{ loop.index0 }} ? -1 : {{ loop.index0 }}"
                        class="w-full py-4 text-left group transition-all duration-300"
                >
                    {# accordionHeading handle #}
                    <span class="font-montreal font-light text-ehaus-grey text-lg">
                        {{ item.accordionHeading }}
                    </span>
                </button>

                {# accordionBodyText handle #}
                <div x-show="openItem === {{ loop.index0 }}"
                     x-collapse
                     style="display: none;"
                     class="pb-6 font-montreal font-light text-ehaus-grey/80 leading-relaxed text-base">
                    {{ item.accordionBodyText|raw }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>