{# templates/pages/home/_entry.twig #}
{% extends "_boilerplate/_layouts/layout-base.twig" %}

   {% set navigationTheme = {
       backgroundColor: 'bg-foxplan-yellow',
       textColor: 'text-foxplan-charcoal-brown',
       actionBgColor: 'bg-foxplan-charcoal-brown'
   } %}

{% block blockAppBody %}



        {% include '_sections/hero-sections/hero-home.twig' with {
            props: {
                headingLine1: 'Finally, finances',
                headingLine2: 'figured out.',
                bodyText: entry.heroBodyText,
                buttonText: entry.button,
                imagePath: 'images/hero.jpg',
                arrowPath: 'images/placeholder/Arrow_1.svg',
            }
        } only %}

        {% include '_sections/content-sections/hero-arc.twig' %}

        {% include '_sections/services/hero-services.twig' with {
            entry: entry,
            props: {
                heading: entry.paragraphHeading2 ?? 'Our Services',
                introText: entry.bodyText2 ?? '',
            }
        } %}

        {% set testimonialEntries = craft.entries().section('testimonials').all() %}

        {{ include('_sections/testimonials/testimonial-two.twig', {
            data: {
                paragraphHeading4: entry.paragraphHeading3 ?? 'Hear what our clients are saying',
                backgroundColor: 'bg-foxplan-neutral-beige',
                borderColor: 'border-foxplan-yellow',
                textColor: 'text-foxplan-charcoal-brown',
                quoteIconColor: 'bg-foxplan-yellow',
                btnBgColor: 'bg-foxplan-charcoal-brown',
                btnTextColor: 'text-foxplan-yellow'
            },
            testimonials: testimonialEntries
        }) }}

        {{ include('_sections/content-sections/hero-grow.twig') }}

        {% include "_sections/content-sections/link-to-insights.twig" %}

        {{ include('_components/footer/footer-High-fidelity.twig', {
            props: {
                backgroundColor: 'bg-foxplan-neutral-beige',
                textColor: 'text-foxplan-charcoal-brown',
                logoColor: 'text-foxplan-charcoal-brown',
                buttonColor: 'bg-foxplan-charcoal-brown',
                buttonTextColor: 'text-foxplan-neutral-beige',
                foxplanText: 'foxplan',
                borderTopColor: 'border-foxplan-charcoal-brown/20',
                borderTopWidth: 'border-t-2'
            }
        }) }}


{% endblock %}