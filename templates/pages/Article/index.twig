{# templates/pages/article/_entry.twig #}
{% extends "_boilerplate/_layouts/layout-base.twig" %}

{# Navigation matches the cream hero background #}
{% set navigationTheme = {
    backgroundColor: 'bg-[#F9EFD8]',
    textColor: 'text-foxplan-charcoal-brown',
    actionBgColor: 'bg-foxplan-charcoal-brown'
} %}

{% block blockAppBody %}

    {# 1. THE HERO SECTION: Contains Title, Date, Category, and Image #}
    {% include '_sections/hero-sections/hero-Article.twig' with {
        entry: entry
    } only %}

    {# 2. THE MAIN BODY: Displays 'insightBody' aligned under the Image #}
    {# templates/pages/Insights/_entry.twig (or your entry route file) #}

    {% include '_sections/content-sections/article-template.twig' with {
        entry: entry
    } %}

    {# 3. RELATED INSIGHTS: Fetches articles from the same Category #}
    {% include '_sections/content-sections/link-to-insights.twig' with {
        entry: entry,
        bgColor: 'bg-foxplan-charcoal-brown',
        textColor: 'text-foxplan-neutral-beige'
    } only %}

    {# 4. NEWSLETTER SIGNUP #}
    {% include '_sections/newsletter/newsletter-signup-1.twig' %}

    {# 5. footer #}
    {{ include('_components/footer/footer-High-fidelity.twig', {
        props: {
            backgroundColor: 'bg-foxplan-yellow',
            textColor: 'text-foxplan-charcoal-brown',
            logoColor: 'text-foxplan-charcoal-brown',
            buttonColor: 'bg-foxplan-charcoal-brown',
            buttonTextColor: 'text-foxplan-whitepages',
            foxplanText: 'foxplan',
            borderTopColor: 'border-foxplan-yellow/20',
            borderTopWidth: 'border-t-2'
        }
    }) }}

{% endblock %}