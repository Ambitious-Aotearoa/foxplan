{# templates/_boilerplate/layouts/layout-base.twig #}
<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    {# 1. CSS & Fonts #}
    <link rel="stylesheet" href="https://use.typekit.net/hty7zmt.css">
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'foxplan-yellow': '#FBC938',
                        'foxplan-neutral-beige': '#F9EFD8',
                        'foxplan-white': '#FEFCF7',
                        'foxplan-charcoal-brown': '#270E15',
                    },
                    fontFamily: {
                        'serif': ['SeasonSerifTRIALLight', 'serif'],
                        'aktiv-grotesk': ['aktiv-grotesk'],
                    },
                    screens: {
                        'sm': '640px',
                        'md': '768px',
                        'lg': '1280px',
                    },
                }
            }
        }
    </script>

    <style>
        [x-cloak] {
            display: none !important;
        }

        html, body {
            margin: 0 !important;
            padding: 0 !important;
            width: 100%;
            overflow-x: hidden;
        }

        {# Prevent layout shift before fonts load #}
        .font-serif {
            font-family: 'SeasonSerifTRIALLight', serif;
        }

        .font-aktiv-grotesk {
            font-family: 'aktiv-grotesk', sans-serif;
        }
    </style>

    {# 2. Animation Libraries (Load in Head or before body to prevent init errors) #}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

    {# 3. Alpine.js (Defer is correct for Alpine) #}
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>

<body class="antialiased font-aktiv-grotesk text-foxplan-charcoal-brown bg-foxplan-neutral-beige">

{{ include("_components/nav/nav.twig", { navigationTheme: navigationTheme ?? null }, withContext = true) }}

<main class="w-full">
    {% block blockAppBody %}{% endblock %}
</main>

<script>
    // Globally register GSAP plugins once
    gsap.registerPlugin(ScrollTrigger);
</script>
</body>
</html>