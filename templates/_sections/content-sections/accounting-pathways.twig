{# templates/_sections/content-sections/accounting-grid.twig #}

<section class="w-full bg-foxplan-neutral-beige py-16 md:py-24 px-5 border-b border-foxplan-charcoal-brown/10">

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-start">

        {# Left Column: Heading and Intro #}
        <div class="lg:col-span-4">
            <h2 class="text-5xl md:text-7xl font-serif text-foxplan-charcoal-brown leading-[1.1] mb-8 max-w-[320px] whitespace-normal">
                {{ block.paragraphHeading2 ?? '' }}
            </h2>

            {% if block.bodyText is defined and block.bodyText %}
                <div class="text-base md:text-lg leading-relaxed text-foxplan-charcoal-brown/90 max-w-md">
                    {{ block.bodyText | raw }}
                </div>
            {% endif %}
        </div>

        {# Right Column: Matrix Grid #}
        <div class="lg:col-span-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-16">

                {% if block.accountingMatrix is defined %}
                    {% for item in block.accountingMatrix.all() %}
                        <div class="flex flex-col">
                            <h3 class="text-2xl md:text-3xl font-serif text-foxplan-charcoal-brown mb-3">
                                {{ item.mainHeading ?? '' }}
                            </h3>

                            <div class="text-base leading-snug text-foxplan-charcoal-brown/80">
                                {{ item.bodyText | raw }}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

            </div>
        </div>

    </div>
</section>