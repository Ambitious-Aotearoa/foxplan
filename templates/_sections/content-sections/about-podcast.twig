{# templates/_sections/content-sections/about-podcast.twig #}

{# 1. Setup scoped defaults #}
{% set defaults = {
    backgroundColor: 'bg-foxplan-yellow',
    textColor: 'text-foxplan-charcoal-brown',
    topLabel: 'A 360 APPROACH',
    body1: 'Text here...',
    body2: 'More text here...',
    showLogo: true
} %}

{# 2. Merge with the SPECIFIC data passed to this include #}
{% set sectionData = defaults | merge(data ?? {}) %}

{# 3. Use sectionData prefix for EVERYTHING #}
<section class="w-full py-16 md:py-24 {{ sectionData.backgroundColor }}">
    <div class="px-8 md:px-12 w-full">
        <div class="grid grid-cols-1 md:grid-cols-10">

            {# LEFT: Label (30%) #}
            <div class="md:col-span-3">
                <span class="text-sm font-medium uppercase tracking-wider {{ sectionData.textColor }}">
                    {{ sectionData.topLabel }}
                </span>
            </div>

            {# RIGHT: Content (70%) #}
            <div class="md:col-span-7 mt-4 md:mt-0">
                <div class="flex flex-col md:flex-row md:items-end justify-between gap-12">
                    <div class="flex-1">
                        <p class="text-2xl md:text-3xl leading-relaxed {{ sectionData.textColor }} mb-8">
                            {{ sectionData.body1 }}
                        </p>
                        <p class="text-2xl md:text-3xl leading-relaxed {{ sectionData.textColor }}">
                            {{ sectionData.body2 }}
                        </p>
                    </div>

                    {% if sectionData.showLogo %}
                        <div class="flex-shrink-0">
                            <img src="{{ craft.vite.asset('images/FoxPlan_Logo.svg') }}" class="w-32 h-auto">
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>