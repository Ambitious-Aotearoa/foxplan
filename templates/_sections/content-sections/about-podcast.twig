{# _sections/content-sections/about-podcast.twig #}

{% set podcastData = {
    topLabel: 'ABOUT THE POD',
    body1: 'Tired of generic money advice that doesn\'t fit your life? Hosted by qualified NZ financial advisers Tim Ellis and Brodie Haggerty, this podcast cuts through the noise to deliver real-talk financial literacy for New Zealanders in their mid-30s to late-40s.',
    body2: 'Whether you\'re growing your wealth, protecting assets amid rising costs, or planning for family milestones like buying a home or prepping for retirement, we\'ve got actionable strategies tailored to Kiwi realitiesâ€”think IRD tax hacks, KiwiSaver tweaks, and recession-proof investing.',
    foxIconUrl: '/assets/img/fox-icon.svg'
        } %}

        {# Tailwind Class Definitions for styling #}
        {% set topLabelClasses = 'text-sm text-black uppercase tracking-wider mb-2 md:mb-0' %}
        {% set bodyTextClasses = 'text-2xl leading-relaxed text-black mb-6 max-w-6xl' %}
        {% set foxIconClasses = 'w-16 h-auto' %}

        <section class="w-full pt-16 pb-16 md:pt-24 md:pb-24">
    <div class="mx-auto px-4">

        {# Main Grid: Label (Narrow) + Content (Wide) + Icon (Narrow) #}
        <div class="grid grid-cols-1 md:grid-cols-12 gap-x-12">

            {# Column 1: Label #}
            <div class="md:col-span-3 lg:col-span-2">
                <span class="{{ topLabelClasses }}">{{ podcastData.topLabel }}</span>
            </div>

            {# Column 2: Main Content (Narrowed internally) #}
            <div class="md:col-span-8 lg:col-span-9">

                {# Enforce max-w-2xl inside the content column #}
                <div class="max-w-6xl">
                    {# First paragraph #}
                    <p class="{{ bodyTextClasses }}">
                        {{ podcastData.body1 }}
                    </p>

                    {# Second paragraph #}
                    <p class="{{ bodyTextClasses }}">
                        {{ podcastData.body2 }}
                    </p>
                </div>

            </div>

            {# Column 3: Fox Icon (Extreme Right) #}
            <div class="flex flex-col justify-end items-end">
                {# Fox Icon/Logo, positioned at the top of its column #}
                <img
                    src="{{ podcastData.foxIconUrl }}"
                    alt="Fox Icon/Logo"
                    class="{{ foxIconClasses }} mt-8"
                >
            </div>

        </div>
    </div>
</section>