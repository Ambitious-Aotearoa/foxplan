{# _sections/content-sections/link-to-insights.twig #}

{% set insightData = {
    heading: 'Latest insights',
    articles: [
        {
            date: 'JUNE 13, 2024',
            title: 'Why choose private health insurance?',
            url: '#'
        },
        {
            date: 'MAY 20, 2024',
            title: '8 great investment mistakes to avoid',
            url: '#'
        },
        {
            date: 'MAY 16, 2024',
            title: 'The ultimate guide to retirement planning',
            url: '#'
        }
    ]
} %}

{# Tailwind Class Definitions for consistency #}
{% set mainHeadingClasses = 'font-serif text-[4rem] font-light leading-none text-gray-900 mb-12' %}
{% set articleDateClasses = 'text-sm font-semibold text-black uppercase tracking-wider mb-2' %}
{% set articleTitleClasses = 'font-serif text-[2rem] max-w-lg font-medium leading-tight text-black mb-4 hover:text-gray-700 transition-colors duration-200' %}
{% set readMoreClasses = 'text-sm text-[#8C8C8C] uppercase tracking-wider hover:text-gray-900 transition-colors duration-200' %}

<section class="w-full bg-white pt-16 pb-16 md:pt-24 md:pb-24">
    <div class="mx-auto px-4">


        {# Main Heading #}
        <h2 class="{{ mainHeadingClasses }}">{{ insightData.heading }}</h2>

        {# Articles Grid Container #}
        <div class="
            grid grid-cols-1 md:grid-cols-3
            md:gap-x-8 lg:gap-x-12
        ">

            {% for article in insightData.articles %}
                {# Apply border-t to every article item #}
                <div class="pt-6 pb-8 md:p-0 md:pt-8 md:pb-8
                    border-t border-gray-300
                ">

                    <p class="{{ articleDateClasses }}">{{ article.date }}</p>

                    <a href="{{ article.url }}">
                        <h3 class="{{ articleTitleClasses }}">{{ article.title }}</h3>
                    </a>

                    <a href="{{ article.url }}" class="{{ readMoreClasses }}">
                        READ MORE
                    </a>
                </div>
            {% endfor %}

        </div>

    </div>
</section>