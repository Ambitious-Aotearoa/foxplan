{# _sections/content-sections/article-template.twig #}

{# 1. FETCH THE HERO IMAGE MAPPED IN FEED ME #}
{% set heroImage = entry.heroImage.one() %}

{# 2. CONTENT SECTION #}
{% set sectionClasses = 'bg-foxplan-neutral-beige' %}
{% set headingClasses = 'font-serif text-[2.5rem] font-light leading-tight text-black mt-12 mb-4' %}
{% set bodyClasses = 'text-base text-black leading-relaxed max-w-6xl' %}
{% set sidebarSquareClasses = 'w-6 h-6 bg-foxplan-charcoal-brown mb-2 flex items-center justify-center text-white text-[10px] hover:bg-opacity-80 transition-all cursor-pointer' %}

<section class="w-full {{ sectionClasses }} pt-24 pb-32">
    <div class="px-[20px] max-w-[1440px] mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-10 gap-x-0 relative">

            {# OFFSET #}
            <div class="hidden md:block md:col-span-3 lg:col-span-2"></div>

            {# MAIN BODY CONTENT #}
            <div class="md:col-span-6 lg:col-span-6">
                {# Display Categories/Tags if they exist #}
                {% if entry.articleCategories | length %}
                    <div class="flex flex-wrap gap-3 mb-8">
                        {% for category in entry.articleCategories.all() %}
                            <span class="text-[10px] uppercase tracking-[0.2em] text-foxplan-charcoal-brown bg-foxplan-yellow px-3 py-1 font-bold">
                                {{ category.title }}
                            </span>
                        {% endfor %}
                    </div>
                {% endif %}

                <div class="prose prose-lg max-w-none
                            prose-headings:{{ headingClasses | replace(' ', ' prose-headings:') }}
                            prose-p:{{ bodyClasses | replace(' ', ' prose-p:') }}
                            prose-headings:first-of-type:mt-0">


                    {{ entry.insightBody | raw }}
                </div>
            </div>

            {# SIDEBAR: Social Sharing #}
            <div class="hidden md:block md:col-start-10 md:col-span-1 pt-4">
                <div class="sticky top-32 flex flex-col items-end">
                    <a href="https://twitter.com/intent/tweet?url={{ entry.url | url_encode }}" target="_blank" class="{{ sidebarSquareClasses }}">ùïè</a>
                    <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ entry.url | url_encode }}" target="_blank" class="{{ sidebarSquareClasses }} font-bold text-[11px]">in</a>
                    <a href="https://www.facebook.com/sharer/sharer.php?u={{ entry.url | url_encode }}" target="_blank" class="{{ sidebarSquareClasses }} font-bold text-[12px]">f</a>
                </div>
            </div>

        </div>
    </div>
</section>