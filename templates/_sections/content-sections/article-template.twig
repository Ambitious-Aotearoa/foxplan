{# articles/_entry.twig #}

{# 1. FETCH DATA #}
{% set category = entry.articleCategories.one() %}
{% set mainImage = entry.featuredImage.one() %}
{% set allFeaturedImages = entry.featuredImage.all() %}

{% set sidebarSquareClasses = 'w-6 h-6 bg-foxplan-charcoal-brown mb-2 flex items-center justify-center text-white text-[10px] hover:bg-opacity-80 transition-all cursor-pointer' %}

<main class="min-h-screen bg-foxplan-neutral-beige">

    {# --- HERO SECTION (Title, Date, Image) --- #}
    <section class="w-full pt-24 pb-0 overflow-hidden">
        <div class="px-[20px] max-w-full mx-auto">

            {# Article Title #}
            <h1 class="font-serif text-foxplan-charcoal-brown text-[4.5rem] md:text-[6rem] lg:text-[7.5rem] leading-[0.9] tracking-tighter mb-12 max-w-[90%] lg:max-w-[80%]">
                {{ entry.title }}
            </h1>

            <div class="grid grid-cols-1 md:grid-cols-10 gap-x-0 items-start">
                {# Meta Information (Date & Category) #}
                <div class="md:col-span-3 lg:col-span-2">
                    <div class="font-montreal text-[10px] uppercase tracking-[0.2em] text-foxplan-charcoal-brown flex flex-wrap gap-y-2 pt-1">
                        <span class="mr-6 block md:inline-block">{{ entry.postDate | date('j F Y') | upper }}</span>
                        {% if category %}
                            <span class="flex items-center">
                                {{ category.title | upper }}
                                <span class="ml-2 mt-[-2px]">‚Ä¢</span>
                            </span>
                        {% endif %}
                    </div>
                </div>

                {# The Featured Image #}
                <div class="md:col-span-7 lg:col-span-8">
                    <div class="aspect-[16/9] w-full overflow-hidden bg-foxplan-charcoal-brown/5">
                        {% if mainImage %}
                            <img src="{{ mainImage.url }}"
                                 alt="{{ mainImage.title ?: entry.title }}"
                                 class="w-full h-full object-cover">
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center border border-foxplan-charcoal-brown/10">
                                <span class="text-[10px] uppercase tracking-widest opacity-30 italic">No Featured Image Found</span>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# --- CONTENT SECTION (Normal padding for body text) --- #}
    <section class="w-full pt-24 pb-32">
        <div class="px-8 md:px-16 lg:px-24 max-w-[1440px] mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-10 gap-x-0 relative">

                {# Column Offset #}
                <div class="hidden md:block md:col-span-3 lg:col-span-2"></div>

                {# Main Body Content #}
                <div class="md:col-span-6 lg:col-span-6">
                    <div class="font-montreal font-light text-foxplan-charcoal-brown leading-[1.6] text-[1.125rem] rich-text-content">
                        <style>
                            .rich-text-content h2 { font-family: serif; font-size: 2.5rem; margin-top: 3rem; margin-bottom: 1.25rem; color: #000; line-height: 1.1; }
                            .rich-text-content p { margin-bottom: 1.5rem; }
                            .rich-text-content p:last-child { margin-bottom: 0; }
                            .rich-text-content img { width: 100%; height: auto; margin: 2rem 0; }
                        </style>

                        {% if entry.insightBody %}
                            {{ entry.insightBody | raw }}
                        {% endif %}

                        {# --- ADDITIONAL GALLERY SECTION --- #}
                        {% if allFeaturedImages|length > 1 %}
                            <div class="mt-16 grid grid-cols-1 md:grid-cols-2 gap-4">
                                {% for image in allFeaturedImages|slice(1) %}
                                    <div class="aspect-square overflow-hidden bg-gray-100">
                                        <img src="{{ image.url }}" alt="{{ image.title }}" class="w-full h-full object-cover">
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                {# Sticky Social Sidebar #}
                <div class="hidden md:block md:col-start-10 md:col-span-1">
                    <div class="sticky top-32 flex flex-col items-end">
                        {% set currentUrl = entry.url | url_encode %}
                        <a href="https://twitter.com/intent/tweet?url={{ currentUrl }}" target="_blank" class="{{ sidebarSquareClasses }}">ùïè</a>
                        <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ currentUrl }}" target="_blank" class="{{ sidebarSquareClasses }} font-bold text-[11px]">in</a>
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ currentUrl }}" target="_blank" class="{{ sidebarSquareClasses }} font-bold text-[12px]">f</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>