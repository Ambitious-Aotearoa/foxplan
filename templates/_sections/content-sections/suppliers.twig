<section class="w-full bg-foxplan-neutral-beige py-6 lg:py-16">
    {# Increased to 40px side margins #}
    <div class="px-4 md:px-6 lg:px-8 w-full mx-auto" x-show="activeTab">

        {% for tab in data.tabs %}
            <div x-show="activeTab === '{{ tab.id }}'"
                 x-transition:enter="transition ease-out duration-300"
                 x-transition:enter-start="opacity-0 transform translate-y-4"
                 x-transition:enter-end="opacity-100 transform translate-y-0">

                {# Large Tab Heading #}
                <h2 class="font-serif text-5xl md:text-7xl text-foxplan-charcoal-brown mb-16 tracking-tight">
                    {{ tab.title }}
                </h2>

                {# Services Grid #}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-x-12 gap-y-20">
                    {% for supplier in tab.suppliers %}
                        {# Entire card is the link using 'buttonUrl' #}
                        <a href="{{ supplier.buttonUrl }}"
                           target="_blank"
                           class="group supplier-card flex flex-col h-full transition-all duration-300 hover:-translate-y-2">

                            {# Maintained Large Logo Container #}
                            <div class="h-24 w-full mb-8 flex items-center justify-start overflow-hidden">
                                {% set image = supplier.suppliersImage.one() %}
                                {% if image %}
                                    <img src="{{ image.url }}"
                                         alt="{{ supplier.providerName }}"
                                         class="max-h-full max-w-[240px] object-contain object-left transition-transform duration-500 group-hover:scale-105">
                                {% else %}
                                    <div class="h-full w-48 bg-gray-100/50 flex items-center justify-center border border-gray-200">
                                        <span class="text-[10px] uppercase tracking-widest opacity-30">Logo Pending</span>
                                    </div>
                                {% endif %}
                            </div>

                            {# Provider Name #}
                            <h3 class="font-serif text-3xl text-foxplan-charcoal-brown leading-tight mb-3">
                                {{ supplier.providerName }}
                            </h3>

                            {# Contact Info #}
                            <div class="font-montreal text-lg text-foxplan-charcoal-brown opacity-90 leading-snug">
                                {{ supplier.contactInfo | raw }}
                            </div>

                        </a>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</section>