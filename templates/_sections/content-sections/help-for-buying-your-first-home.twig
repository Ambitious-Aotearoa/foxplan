{# templates/_sections/content-sections/help-me-buying-your-first-home.twig #}

{% set defaults = {
    mainHeading: 'Help for buying your first home',
    backgroundColor: 'bg-white',
    textColor: 'text-[#270E15]',
    borderColor: 'border-[#270E15]',
    services: [
    {
    title: 'Budgeting & Savings',
    description: 'We help first-time buyers understand what you can afford and create a plan to save for your deposit.'
    },
    {
    title: 'Mortgage Pre-Approval',
    description: 'We’ll secure your mortgage pre-approval so that you know how much you can borrow.'
    },
    {
    title: 'Comparing Lenders',
    description: 'We’ll help you choose the best mortgage option based on your financial situation and needs.'
    },
    {
    title: 'Protection Planning',
    description: 'Making sure you have the right cover for your home, life, and income, so your new investment is secure.'
    }
    ]
    } %}

    {% set data = defaults | merge(props | default({})) %}

    {# Typography Classes #}
    {% set mainHeadingClasses = 'font-serif text-5xl lg:text-[4.5rem] font-light leading-[0.8] tracking-tight ' ~ data.textColor %}
    {% set serviceTitleClasses = 'font-serif text-2xl md:text-[2.6rem] font-light leading-tight mb-4 ' ~ data.textColor %}
    {% set serviceDescriptionClasses = 'font-aktiv text-[15px] leading-relaxed opacity-80 ' ~ data.textColor %}

    <section class="w-full relative z-20 {{ data.backgroundColor }} pt-16 md:pt-24 pb-16 md:pb-24 overflow-hidden border-b {{ data.borderColor }}">
    <div class="w-full">

        {# Main Flex Container: 30/70 Split #}
        <div class="flex flex-wrap w-full items-start">

            {# Left Side: 30% Width #}
            <div class="w-full md:w-[30%] pl-8 md:pl-10 pr-12 mb-12 md:mb-0">
                <div class="max-w-md">
                    <h2 class="{{ mainHeadingClasses }}">
                        {{ data.mainHeading | raw }}
                    </h2>
                </div>
            </div>

            {# Right Side: 70% Width #}
            <div class="w-full md:w-[70%]">
                <div class="w-full px-8 md:px-0 pr-8 md:pr-20">

                    {# Internal Grid for the service blocks #}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-16">
                        {% for service in data.services %}
                            <div class="flex flex-col">
                                {% if service.title %}
                                    <h3 class="{{ serviceTitleClasses }}">
                                        {{ service.title }}
                                    </h3>
                                {% endif %}

                                {% if service.description %}
                                    <p class="{{ serviceDescriptionClasses }}">
                                        {{ service.description }}
                                    </p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>