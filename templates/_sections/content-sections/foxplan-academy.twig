{# _sections/content-sections/foxplan-academy.twig #}

{% set defaults = {
    topLabel: entry.prehead ?? 'FOXPLAN ACADEMY',
    body: entry.largeParagraph ?? 'Every new adviser who joins us goes through our Foxplan Academy training programme...',
    backgroundColor: 'bg-foxplan-yellow',
    labelColor: 'text-foxplan-charcoal-brown',
    textColor: 'text-foxplan-charcoal-brown',
    containerPadding: 'px-4 lg:px-12'
} %}

{% set data = defaults | merge(props | default({})) %}

<section class="w-full {{ data.backgroundColor }} py-4 md:py-16 lg:py-24">
    <div class="w-full {{ data.containerPadding }}">

        <div class="grid grid-cols-1 md:grid-cols-10 gap-x-12">

            {# Left Column: Label (30%) #}
            <div class="md:col-span-3">
                <span class="text-xs font-bold {{ data.labelColor }} uppercase tracking-widest mb-4 block md:mb-0">
                    {{ data.topLabel }}
                </span>
            </div>

            {# Right Column: Content (70%) #}
            <div class="md:col-span-7">
                <div class="font-serif {{ data.textColor }} break-normal"
                     style="font-size: clamp(1.125rem, 1vw + 0.5rem, 1.5rem); line-height: 1.1; word-break: keep-all;">
                    {{ data.body | raw }}
                </div>
            </div>

        </div>
    </div>
</section>