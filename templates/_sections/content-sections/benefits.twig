{# templates/_sections/content-sections/benefits.twig #}

{# --- Handle Dynamic Colors --- #}
{% set bgColor = backgroundColor ?? 'bg-white' %}
{% set txtColor = textColor ?? 'text-black' %}

{# --- Ensure servicesData exists --- #}
{% set servicesData = servicesData ?? {
    heading: 'Get onto the<br>property ladder faster',
    intro: 'Your FoxPlan mortgage adviser can take care of the tricky questions, applications, and lender communications, making your journey smoother, faster, and a lot more certain.',
    items: []
} %}

{% set headingClasses = 'font-serif text-6xl md:text-7xl font-normal leading-none mb-6 ' ~ txtColor %}
{% set introClasses = 'font-aktiv-grotesk text-xl leading-snug mb-10 max-w-xl ' ~ txtColor %}

<div class="w-full {{ bgColor }} py-20">
    {#
    The Grid:
    - md:grid-cols-10 creates a 10-unit system.
    - The first 3 units (30%) are an empty spacer.
    - The remaining 7 units (70%) hold the content.
    #}
    <div class="grid grid-cols-1 md:grid-cols-10 w-full">

        {# Left Spacer (30%) #}
        <div class="hidden md:block md:col-span-3"></div>

        {# Content Area (70%) #}
        <div class="col-span-1 md:col-span-7 px-8 lg:pr-12">

            <div class="mb-16">
                <h2 class="{{ headingClasses }}">
                    {{ servicesData.heading | raw }}
                </h2>
                <p class="{{ introClasses }}">
                    {{ servicesData.intro }}
                </p>
            </div>

            <div class="w-full">
                {{ include('_components/ui/accordion/accordion.twig', {
                    props: {
                        items: servicesData.items,
                        defaultOpen: -1,
                        titleFont: 'font-serif',
                        titleSize: 'text-2xl md:text-3xl',
                        classes: 'px-0',
                        backgroundColor: 'bg-foxplan-white',
                        textColor: 'text-foxplan-charcoal-brown',
                        iconBgColor: 'bg-foxplan-charcoal-brown',
                        iconTextColor: 'text-foxplan-white'
                    }
                }) }}
            </div>

        </div>
    </div>
</div>

<script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.x.x/dist/cdn.min.js"></script>
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>