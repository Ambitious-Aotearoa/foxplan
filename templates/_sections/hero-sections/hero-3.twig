{# 1. Configuration - Fully Hardcoded #}
{% set sectionData = {
    heading: 'Complaints Policy',
    body: '',
    buttonText: 'Contact an adviser',
    buttonLink: '#',
    headingColor: 'text-foxplan-charcoal-brown',
    bodyTextColor: 'text-foxplan-charcoal-brown',
    accentColor: 'bg-foxplan-yellow'
} %}

{# Full Section Yellow Background - Adjusted padding for a clean finish #}
<section class="w-full {{ sectionData.accentColor }} pt-0 pb-16 md:pb-20 font-aktiv overflow-hidden relative">
    <div class="mx-auto relative">

        <div class="grid grid-cols-1 md:grid-cols-10 w-full relative items-stretch">

            {# 20% Spacer #}
            <div class="hidden md:block md:col-span-2"></div>

            {# 80% Content Area #}
            <div class="col-span-1 md:col-span-8 relative">

                {# Image Container - Height remains grand at 85vh #}
                <div class="w-full h-[65vh] md:h-[85vh] relative">
                    {# UPDATED: Points directly to the web/dist/images folder #}
                    <img src="{{ alias('@web/dist/images/PropertyInvestment_hero.jpg') }}"
                         alt="{{ sectionData.heading }}"
                         class="w-full h-full object-cover block">

                    {# HEADING #}
                    <div class="absolute bottom-0 left-0 md:left-8 w-full z-20 -translate-y-[30%]">
                        <h2 class="font-serif font-light {{ sectionData.headingColor }} leading-[0.8] tracking-tighter"
                            style="font-size: clamp(60px, 10vw, 160px);">
                            {{ sectionData.heading }}
                        </h2>
                    </div>
                </div>


                {# The yellow background of the <section> will naturally fill this space #}
                <div class="pt-16 md:pt-20 px-8 md:px-0">
                    {% if sectionData.body %}
                        <div class="max-w-xl">
                            <div class="text-base md:text-lg {{ sectionData.bodyTextColor }} leading-relaxed mb-10 font-medium">
                                {{ sectionData.body | raw }}
                            </div>
                        </div>
                    {% else %}
                        {# This empty div ensures the spacing is maintained even without text #}
                        <div class="h-4"></div>
                    {% endif %}
                </div>
            </div>
        </div>

    </div>
</section>