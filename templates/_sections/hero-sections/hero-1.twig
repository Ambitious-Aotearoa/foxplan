{# templates/_sections/hero-sections/hero-1.twig #}

{% set defaults = {
    title: 'Mortgages',
    bodyText: "Whether you're buying your first home, refinancing, or investing in property. FoxPlan makes it easy to get all your ducks in a row.",
    buttonText: null,
    buttonLink: '#',
    buttonBgColor: 'bg-foxplan-charcoal-brown',
    buttonTextColor: 'text-white',
    imageSrc: 'images/Mortgage_1.jpg',
    backgroundColor: 'bg-foxplan-neutral-beige',
    textColor: 'text-black',
    titleFont: 'font-serif',
    titleSize: 'text-7xl md:text-[8.5rem]',
    bodyFont: 'font-aktiv-grotesk',
    bodySize: 'text-lg md:text-xl'
} %}

{% set heroData = defaults | merge(data | default({})) %}

<section class="{{ heroData.backgroundColor }} w-full overflow-hidden">
    {# Main Container #}
    <div class="pt-16">

        {# TOP: Full Width Title #}
        <div class="w-full pl-8 md:pl-10 mb-8">
            <h1 data-aos="fade-up" class="{{ heroData.titleFont }} {{ heroData.titleSize }} font-normal {{ heroData.textColor }} leading-[0.85] tracking-tighter">
                {{ heroData.title }}
            </h1>
        </div>

        {# BOTTOM: 30/70 Split Grid #}
        <div class="grid grid-cols-1 md:grid-cols-10 w-full items-start">

            {# LEFT: Text & Button (30%) #}
            <div class="col-span-1 md:col-span-3 pl-8 md:pl-10 pr-12 pb-20">
                <div class="max-w-md">
                    <p class="{{ heroData.bodyFont }} {{ heroData.bodySize }} {{ heroData.textColor }} leading-relaxed mb-10">
                        {{ heroData.bodyText }}
                    </p>

                    {% if heroData.buttonText is not empty %}
                        {% include '_components/ui/button/button.twig' with {
                            props: {
                                text: heroData.buttonText,
                                style: 'primary',
                                url: heroData.buttonLink,
                                backgroundColor: heroData.buttonBgColor,
                                textColor: heroData.buttonTextColor,
                                classes: 'px-10 py-4 font-aktiv inline-block'
                            }
                        } only %}
                    {% endif %}
                </div>
            </div>

            {# RIGHT: Image (70%) #}
            <div class="hidden md:block md:col-span-7">
                <div class="w-full h-[600px]">
                    {% if heroData.imageSrc is not empty %}
                        <img src="{{ craft.vite.asset(heroData.imageSrc, false) }}"
                             alt="{{ heroData.title }}"
                             class="w-full h-full object-cover block"
                        >
                    {% endif %}
                </div>
            </div>

        </div>
    </div>
</section>