{# _sections/hero-5-alt.twig #}

{% set sectionData = {
    heading1: 'EQUITY',
    heading2: 'PARTNERS',
    body: 'If you\'re an established business owner, our equity programme can help you build and grow your business while sharing the support and success of our firm.'
} %}

{# MODIFIED: Removed 'max-w-7xl' #}
{% set containerClasses = 'mx-auto' %}
{# Heading font size is fixed at 140px. #}
{% set headingClasses = 'font-serif text-[140px] font-medium leading-none text-gray-900' %}
{% set bodyClasses = 'text-base text-gray-700 leading-relaxed' %}
{% set placeholderClasses = 'bg-gray-100' %}

<section class="w-full bg-white pt-16 md:pt-24 pb-16 md:pb-24">
    <div class="{{ containerClasses }} relative px-4">

        {# Wrapper to define the total height of the hero component #}
        <div class="relative h-[80vh] md:h-[100vh] w-full">

            {# 1. Gray Background Block (Absolute positioning, centered, 50% width) - Z-index 10 #}
            <div class="absolute inset-0 m-auto w-[50%] h-[90%] {{ placeholderClasses }} z-10">
                {# Placeholder content here #}
            </div>

            {# 2. EQUITY Heading (Top Left - Z-index 20) #}
            {# Added right-margin (mr-20) to push the word left, causing 'Y' to overlap the gray block's left edge #}
            <h1 class="{{ headingClasses }} absolute top-0 left-0 z-20 mr-20">
                {{ sectionData.heading1 }}
            </h1>

            {# 3. PARTNERS Heading (MODIFIED: Anchored to the right side of the main wrapper) #}
            {# The height needs to match the gray block (h-[90%]) and it's positioned in the center vertically (top-1/2 -translate-y-1/2). #}
            {# The width is wide (w-3/5) to ensure the full word is visible, and mr-[-5vw] pulls it out to the extreme right edge. #}
            <div class="absolute top-1/2 -translate-y-1/2 right-0 w-3/5 h-[90%] z-20 flex items-center">
                <h1 class="{{ headingClasses }} text-right w-full mr-[-5vw] md:mr-[-8vw]">
                    {{ sectionData.heading2 }}
                </h1>
            </div>

            {# 4. Body Text Content (Absolutely positioned to the bottom left) #}
            <div class="absolute bottom-8 left-0 w-full md:w-1/4">
                <p class="{{ bodyClasses }}">
                    {{ sectionData.body }}
                </p>
            </div>

        </div>

    </div>
</section>