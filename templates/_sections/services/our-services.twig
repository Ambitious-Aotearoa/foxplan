{# templates/_sections/services/our-services.twig #}

{% set defaults = {
    title: 'Services',
    description: '',
    backgroundColor: 'bg-white',
    items: [],
    buttonBgColor: 'bg-foxplan-charcoal-brown',
    buttonTextColor: 'text-white'
} %}

{% set data = defaults | merge(props | default({})) %}
{% set groupedItems = data.items | batch(2) %}

<section class="w-full relative z-20 py-8 md:py-16 lg:py-24 {{ data.backgroundColor }} overflow-hidden">
    <div class="grid grid-cols-1 md:grid-cols-10 w-full items-start">

        {# --- LEFT SIDE: 30% Width (3 out of 10 columns) --- #}
        <div class="col-span-1 md:col-span-3 pl-4 md:pl-8 pr-8 ">
            <div class="max-w-md">
                <h2 class="font-serif tracking-tight text-foxplan-charcoal-brown mb-8 break-normal"
                    style="font-size: clamp(2.5rem, 6vw + 1rem, 6.5rem); line-height: 0.85; word-break: keep-all;">
                    {{ data.title | raw }}
                </h2>

                {% if data.description %}
                    <div class="font-aktiv leading-relaxed text-foxplan-charcoal-brown font-medium opacity-90"
                         style="font-size: clamp(1rem, 0.5vw + 0.8rem, 1.25rem);">
                        {{ data.description | raw }}
                    </div>
                {% endif %}
            </div>
        </div>

        {# --- RIGHT SIDE: 70% Width (7 out of 10 columns) --- #}
        <div class="col-span-1 md:col-span-7 pl-4 md:pl-8 pr-8 lg:pr-32">
            <div class="w-full">
                {% for group in groupedItems %}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 lg:gap-x-20 gap-y-16 mb-16 last:mb-0 items-start">

                        {% for item in group %}
                            <div class="flex flex-col h-full items-start text-left">
                                {# SUBHEADING CLAMP: Reduced scale (28px to 40px) #}
                                <h3 class="font-serif leading-tight text-foxplan-charcoal-brown mb-4 break-normal"
                                    style="font-size: clamp(1.75rem, 2vw + 1rem, 2.5rem); word-break: keep-all;">
                                    {{ item.title }}
                                </h3>

                                {# ITEM BODY CLAMP: Matches refined body scale #}
                                <div class="font-aktiv text-foxplan-charcoal-brown/90 leading-relaxed mb-8 w-full font-medium"
                                     style="font-size: clamp(1rem, 0.5vw + 0.8rem, 1.25rem);">
                                    {{ item.text | raw }}
                                </div>

                                <div class="mt-auto">
                                    {% include '_components/ui/button/button.twig' with {
                                        props: {
                                            text: 'LEARN MORE',
                                            url: item.link,
                                            style: 'primary',
                                            backgroundColor: data.buttonBgColor,
                                            textColor: data.buttonTextColor,
                                            classes: 'rounded-none'
                                        }
                                    } only %}
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
</section>