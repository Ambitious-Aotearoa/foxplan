{# templates/_sections/services/our-services.twig #}

{% set defaults = {
    title: 'Services',
    description: '',
    backgroundColor: 'bg-white',
    items: [],
    buttonBgColor: 'bg-foxplan-charcoal-brown',
    buttonTextColor: 'text-white'
} %}

{% set data = defaults | merge(props | default({})) %}
{# We batch by 2 to create the two-column grid on the right side #}
{% set groupedItems = data.items | batch(2) %}

<section class="w-full relative z-20 pt-16 pb-16 md:pt-24 md:pb-32 {{ data.backgroundColor }} overflow-hidden">
    {# Using a 10-column grid to define 30/70 split #}
    <div class="grid grid-cols-1 md:grid-cols-10 w-full items-start">

        {# --- LEFT SIDE: 30% Width (3 out of 10 columns) --- #}
        <div class="col-span-1 md:col-span-3 pl-8 pr-8 mb-12 md:mb-0">
            <div class="max-w-md">
                <h2 class="font-serif text-5xl lg:text-[5.5rem] font-light leading-[0.9] text-foxplan-charcoal-brown tracking-tight mb-8">
                    {{ data.title | raw }}
                </h2>

                {% if data.description %}
                    <div class="font-aktiv text-base md:text-lg leading-relaxed text-foxplan-charcoal-brown opacity-80">
                        {{ data.description | raw }}
                    </div>
                {% endif %}
            </div>
        </div>

        {# --- RIGHT SIDE: 70% Width (7 out of 10 columns) --- #}
        <div class="col-span-1 md:col-span-7 pl-12 lg:pr-32">
            <div class="w-full">
                {% for group in groupedItems %}
                    {# This internal grid handles the two-column service layout #}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 lg:gap-x-20 gap-y-16 mb-16 last:mb-0 items-start">

                        {% for item in group %}
                            <div class="flex flex-col h-full items-start text-left">
                                <h3 class="font-serif text-3xl md:text-[2.2rem] lg:text-[2.5rem] font-light leading-tight text-foxplan-charcoal-brown mb-4">
                                    {{ item.title }}
                                </h3>

                                <div class="font-aktiv text-[15px] text-foxplan-charcoal-brown/80 leading-relaxed mb-8 w-full">
                                    {{ item.text | raw }}
                                </div>

                                <div class="mt-auto">
                                    {% include '_components/ui/button/button.twig' with {
                                        props: {
                                            text: 'LEARN MORE',
                                            url: item.link,
                                            style: 'primary',
                                            backgroundColor: data.buttonBgColor,
                                            textColor: data.buttonTextColor,
                                            classes: 'rounded-none'
                                        }
                                    } only %}
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
</section>