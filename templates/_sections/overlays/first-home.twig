<section
        x-show="showFirstHomeOverlay"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        class="fixed inset-0 z-[9999] flex items-center justify-center p-4 bg-black/60 backdrop-blur-sm"
        x-cloak
>
    {# Modal Container - Foxplan Neutral Beige [#f9efd8] #}
    <div
            @click.away="showFirstHomeOverlay = false"
            x-data="{ step: 1 }"
            class="relative w-full max-w-4xl bg-[#f9efd8] shadow-2xl p-6 md:p-12 overflow-y-auto max-h-[95vh]"
    >
        {# Close Button #}
        <button @click="showFirstHomeOverlay = false" class="absolute top-6 right-6 text-[#270e15] hover:opacity-60 transition-opacity z-50">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>

        {# Step 1: Lead Gen Form #}
        <div x-show="step === 1" x-transition>
            <h2 class="font-serif text-5xl md:text-7xl text-[#270e15] mb-6">Get the guide</h2>
            <p class="text-xl text-gray-700 leading-relaxed mb-10 max-w-md">Ready to get your finances in great shape? Fill in your details below.</p>

            <form @submit.prevent="step = 2" class="space-y-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="relative">
                        <label class="block text-xs font-bold uppercase tracking-wider text-[#270e15] mb-2">First Name</label>
                        <input type="text" placeholder="John" required class="w-full border-b border-[#270e15]/20 py-2 px-2 focus:border-[#270e15] outline-none transition-colors bg-transparent">
                    </div>
                    <div class="relative">
                        <label class="block text-xs font-bold uppercase tracking-wider text-[#270e15] mb-2">Last Name</label>
                        <input type="text" placeholder="Doe" required class="w-full border-b border-[#270e15]/20 py-2 px-2 focus:border-[#270e15] outline-none transition-colors bg-transparent">
                    </div>
                </div>
                <div class="relative">
                    <label class="block text-xs font-bold uppercase tracking-wider text-[#270e15] mb-2">Email Address</label>
                    <input type="email" placeholder="johndoe@email.com" required class="w-full border-b border-[#270e15]/20 py-2 px-2 focus:border-[#270e15] outline-none transition-colors bg-transparent">
                </div>
                <button type="submit" class="inline-flex items-center gap-4 bg-[#270e15] text-[#f9efd8] px-8 py-4 text-lg hover:bg-black transition-all group">
                    Download now
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </button>
            </form>
        </div>

        {# Step 2: Calendly Discovery Call #}
        <div x-show="step === 2" x-transition class="w-full">
            <div class="text-center md:text-left mb-4">
                <h2 class="font-serif text-5xl md:text-6xl text-[#270e15] mb-2">Thank You!</h2>
                <p class="text-lg text-gray-700">Your download is on its way! Book a discovery call below.</p>
            </div>

            <div class="border-t border-[#270e15]/10 pt-4">
                {# Updated Calendly Widget with hide_event_type_details #}
                <div
                        class="calendly-inline-widget"
                        data-url="https://calendly.com/foxplansales/discovery-phone-call-clone?hide_event_type_details=1&background_color=f9efd8&primary_color=270e15&text_color=270e15"
                        style="min-width:320px;height:700px;"
                ></div>
            </div>
        </div>
    </div>
</section>

{# Register the Calendly Script #}
