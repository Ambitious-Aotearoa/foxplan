<div
        x-data="{ open: true }"
        x-show="open"
        x-cloak
        {# Locks scroll and applies blur classes to the entire viewport, including the navbar #}
        x-init="$watch('open', value => document.body.classList.toggle('overflow-hidden', value))"
        class="fixed inset-0 z-[9999] overflow-y-auto"
        aria-labelledby="modal-title"
        role="dialog"
        aria-modal="true"
>
    {# 1. Modal Overlay (Background Dimmer with Blur) #}
    <div
            x-show="open"
            x-transition:enter="ease-out duration-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="ease-in duration-200"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
            {# backdrop-blur covers the navbar #}
            class="fixed inset-0 bg-foxplan-charcoal-brown/60 backdrop-blur-sm transition-opacity"
    ></div>

    {# 2. Modal Container #}
    <div class="fixed inset-0 flex items-center justify-center p-4 sm:p-0">

        {# 3. Modal Panel #}
        <div
                x-show="open"
                x-transition:enter="ease-out duration-300"
                x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                x-transition:leave="ease-in duration-200"
                x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"

                {# Keep click-away disabled to focus on the form #}
                class="relative bg-foxplan-neutral-beige shadow-xl transform transition-all
                   max-w-xl w-full p-6 md:p-8"
        >

            <div class="modal-content text-center md:text-left">

                {# Restored Close Button #}
                <button
                        type="button"
                        class="absolute top-4 right-4 text-foxplan-charcoal-brown-400 hover:text-foxplan-charcoal-brown-600 focus:outline-none"
                        x-on:click="open = false"
                >
                    <span class="sr-only">Close modal</span>
                    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>

                {# Heading #}
                <h3 id="modal-title" class="font-serif text-4xl sm:text-5xl font-light leading-snug text-foxplan-charcoal-brown-900 mb-6 mt-[24px]">
                    Join our <br>mailing list
                </h3>

                {# Description #}
                <p class="text-base text-gray-700 leading-relaxed mb-8 max-w-lg">
                    Financial updates, tips and advice from our newsletter to your inbox on a regular basis.
                </p>

                {# Email Form #}
                <form action="#" method="POST" @submit.prevent="open = false" class="w-full">
                    <div class="flex border-b border-b-foxplan-charcoal-brown-400 focus-within:border-b-foxplan-charcoal-brown-900 transition-colors duration-300 mb-[70px]">
                        <input
                                type="email"
                                placeholder="Enter your email address"
                                required
                                class="w-full py-2 bg-transparent text-foxplan-charcoal-brown-900 placeholder-foxplan-charcoal-brown-500 focus:outline-none text-lg"
                        >
                        <button
                                type="submit"
                                class="text-sm font-bold text-foxplan-charcoal-brown-900 uppercase tracking-wider pl-4 flex-shrink-0 hover:text-foxplan-charcoal-brown-600 transition-colors"
                        >
                            Submit
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>