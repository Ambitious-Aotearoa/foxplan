{# _sections/newsletter/newsletter-signup-1.twig #}

{% set data = {
    topLabel: 'SUBSCRIBE',
    heading: 'For regular financial insights, subscribe to our newsletter.',
    placeholder: 'Enter your email address',
    submitText: 'SUBMIT'
} %}

<section class="w-full bg-foxplan-charcoal-brown border-l-0 md:border-l-[24px] border-foxplan-charcoal-brown">

    {#
    PADDING:
    #}
    <div id="newsletter-container" class="bg-foxplan-neutral-beige py-4 lg:py-24 px-4 md:px-6 transition-all duration-500">

        <div class="w-full">
            <span class="font-aktiv text-[10px] font-bold uppercase tracking-[0.2em] text-foxplan-charcoal-brown mb-8 block">
                {{ data.topLabel }}
            </span>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-24 items-center">

                <div id="newsletter-content">
                    <h2 class="font-serif tracking-tight text-foxplan-charcoal-brown break-normal"
                        style="font-size: clamp(2rem, 4vw + 1rem, 4.5rem); line-height: 0.85; word-break: keep-all;">
                        {{ data.heading | raw }}
                    </h2>
                </div>

                <div id="newsletter-form-container">
                    <form id="newsletter-form" onsubmit="handleNewsletterSubmit(event)" class="w-full">
                        <div class="flex items-center justify-between border-b border-foxplan-charcoal-brown/30 pb-2">
                            <input
                                    type="email"
                                    name="email"
                                    placeholder="{{ data.placeholder }}"
                                    class="w-full text-base font-aktiv py-4 bg-transparent focus:outline-none placeholder-foxplan-charcoal-brown/30 text-foxplan-charcoal-brown"
                                    required
                            >
                            <button type="submit" class="flex items-center font-aktiv text-[10px] font-bold uppercase tracking-[0.2em] text-foxplan-charcoal-brown hover:opacity-60 transition-opacity ml-4 flex-shrink-0">
                                {{ data.submitText }}
                                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                </svg>
                            </button>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
</section>