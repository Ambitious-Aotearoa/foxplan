{# _sections/newsletter/newsletter-popup.twig #}
{# This component uses Alpine.js for show/hide logic. #}

<div
        {# The popup starts open (open: true) and relies on your JavaScript logic to eventually close it (e.g., after the user submits the form or based on cookies). #}
        x-data="{ open: true }"
        x-show="open"
        x-cloak
        class="fixed inset-0 z-50 overflow-y-auto"
        aria-labelledby="modal-title"
        role="dialog"
        aria-modal="true"
>

    {# 1. Modal Overlay (Background Dimmer) #}
    <div
            x-show="open"
            x-transition:enter="ease-out duration-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="ease-in duration-200"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
            class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
    ></div>

    {# 2. Modal Container (Center Content) #}
    <div class="fixed inset-0 flex items-center justify-center p-4 sm:p-0">

        {# 3. Modal Panel - PADDING HAS BEEN REDUCED HERE #}
        <div
                x-show="open"
                x-transition:enter="ease-out duration-300"
                x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                x-transition:leave="ease-in duration-200"
                x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"

                x-on:click.away="open = false"
                class="relative bg-white shadow-xl transform transition-all
                   max-w-xl w-full p-6 md:p-8"
        >

            <div class="modal-content text-center md:text-left">

                {# Close Button #}
                <button
                        type="button"
                        class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 focus:outline-none"
                        x-on:click="open = false"
                >
                    <span class="sr-only">Close modal</span>
                    {# Close (X) Icon #}
                    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>

                {# Heading #}
                <h3 id="modal-title" class="font-serif text-4xl sm:text-5xl font-light leading-snug text-gray-900 mb-6 mt-[24px]">
                    Join our <br>mailing list
                </h3>

                {# Description #}
                <p class="text-base text-gray-700 leading-relaxed mb-8 max-w-lg">
                    Financial updates, tips and advice from our newsletter to your inbox on a regular basis.
                </p>

                {# Email Form #}
                <form action="#" method="POST" class="w-full">
                    <div class="flex border-b border-gray-400 focus-within:border-gray-900 transition-colors duration-300 mb-[70px]">
                        <input
                                type="email"
                                placeholder="Enter your email address"
                                required
                                class="w-full py-2 bg-transparent text-gray-900 placeholder-gray-500 focus:outline-none text-lg"
                        >
                        <button
                                type="submit"
                                class="text-sm font-bold text-gray-900 uppercase tracking-wider pl-4 flex-shrink-0 hover:text-gray-600 transition-colors"
                        >
                            Submit
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>