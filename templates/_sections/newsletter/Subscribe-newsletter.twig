{# _sections/content-sections/passing-knowledge.twig #}

{% set knowledgeData = {
    heading: 'Subscribe to Dollars and Sense Podcast',
    body: 'Check out our podcast for weekly tips, market insights, and practical strategies.',
    ctaText: 'Listen now',
    ctaUrl: '#'
} %}

{# Hardcoded path to the local image file #}
{% set podcastImagePath = '/dist/images/Podcast_2.jpg' %}

<section class="w-full bg-foxplan-charcoal-brown py-20 px-[20px]">
    <div class="w-full">
        <div class="grid grid-cols-1 md:grid-cols-10 gap-x-8 lg:gap-x-12 items-end">

            {# Left Column: Content (40%) #}
            <div class="md:col-span-4 order-2 md:order-1 flex flex-col justify-end">
                <h2 class="font-serif text-foxplan-yellow text-[3.2rem] md:text-[3.8rem] leading-[1.1] mb-6">
                    {{ knowledgeData.heading }}
                </h2>

                <p class="font-aktiv-grotesk text-foxplan-yellow/80 text-lg mb-8 max-w-sm">
                    {{ knowledgeData.body }}
                </p>

                <div class="flex">
                    {% include '_components/ui/button/button.twig' with {
                        props: {
                            text: knowledgeData.ctaText,
                            link: knowledgeData.ctaUrl,
                            backgroundColor: 'bg-foxplan-yellow',
                            textColor: 'text-foxplan-charcoal-brown',
                            hasArrow: true
                        }
                    } only %}
                </div>
            </div>

            {# Right Column: Image (60%) #}
            <div class="md:col-span-6 order-1 md:order-2 mb-10 md:mb-0">
                <div class="aspect-[16/7] w-full overflow-hidden">
                    <img src="{{ podcastImagePath }}"
                         alt="Podcast Lifestyle"
                         class="w-full h-full object-cover">
                </div>
            </div>

        </div>
    </div>
</section>